{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~html/*": [
                "src/html/*"
            ],
            "~js/*": [
                "src/js/*"
            ],
            "~scss/*": [
                "src/scss/*"
            ],
            "~/*": [
                "src/*"
            ],
            "@html/*": [
                "src/html/*"
            ],
            "@js/*": [
                "src/js/*"
            ],
            "@scss/*": [
                "src/scss/*"
            ],
            "@/*": [
                "src/*"
            ]
        }
    }
}